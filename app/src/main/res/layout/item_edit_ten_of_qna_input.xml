<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvQuestion"
        style="@style/pretendard_bold_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rect_grey_03_r10"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        android:textColor="@color/black"
        app:drawableEndCompat="@drawable/ic_close"
        app:drawableTint="@color/grey_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lorem ipsum dolor sit amet?" />

    <EditText
        android:id="@+id/etAnswer"
        style="@style/TextField"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginTop="7dp"
        android:gravity="top|start"
        android:hint="@string/my_profile_edit_ten_of_qna_hint"
        android:inputType="textMultiLine"
        android:textColorHint="@color/grey_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion" />
</androidx.constraintlayout.widget.ConstraintLayout>