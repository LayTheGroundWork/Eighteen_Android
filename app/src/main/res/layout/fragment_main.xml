<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".presentation.MainFragment">

    <TextView
        android:id="@+id/tx_greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/main_greeting"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tx_today_teen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/main_today_teen"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tx_greeting"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_exercise"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="@string/tag_exercise"
        android:textAlignment="center"
        app:chipStrokeColor="@color/lightGrey"
        app:chipStrokeWidth="1dp"
        android:backgroundTint="@color/white"
        app:chipCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/tx_today_teen"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_beauty"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7dp"
        android:text="@string/tag_beauty"
        android:textAlignment="center"
        app:chipStrokeColor="@color/lightGrey"
        app:chipStrokeWidth="1dp"
        android:backgroundTint="@color/white"
        app:chipCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/tx_today_teen"
        app:layout_constraintStart_toEndOf="@id/chip_exercise"/>

</androidx.constraintlayout.widget.ConstraintLayout>