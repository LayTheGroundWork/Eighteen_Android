<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".presentation.home.MainFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tx_today_teen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/main_today_teen"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <HorizontalScrollView
                android:id="@+id/horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tx_today_teen">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp"
                    android:backgroundTint="@color/white"
                    app:chipCornerRadius="16dp" />
            </HorizontalScrollView>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_today_teen"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal_scrollview"/>

            <View
                android:id="@+id/view_center_line_1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/whiteGrey"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/vp_today_teen"/>

            <TextView
                android:id="@+id/tx_about_teen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:text="@string/main_about_teen"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/view_center_line_1"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_about_teen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/tx_about_teen">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/view_about_teen"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_about_teen"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@id/view_tournament"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/img_about_teen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_about_teen"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tx_about_teen_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_teen_title"
                        android:textColor="@color/mainColor"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        app:layout_constraintTop_toTopOf="@id/img_about_teen"
                        app:layout_constraintBottom_toBottomOf="@id/img_about_teen"
                        app:layout_constraintStart_toEndOf="@id/img_about_teen"/>

                    <TextView
                        android:id="@+id/tx_about_teen_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_teen_detail"
                        android:textColor="@color/mainColor"
                        android:textAlignment="textStart"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="13dp"
                        app:layout_constraintStart_toStartOf="@id/img_about_teen"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tx_about_teen_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/view_tournament"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_about_teen"
                    app:layout_constraintStart_toEndOf="@id/view_about_teen"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/img_tournament"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_tournament"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tx_tournament_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_teen_tournament_title"
                        android:textColor="@color/mainColor"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/img_tournament"
                        app:layout_constraintBottom_toBottomOf="@id/img_tournament"
                        app:layout_constraintStart_toEndOf="@id/img_tournament"/>

                    <TextView
                        android:id="@+id/tx_tournament_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_teen_tournament_detail"
                        android:textColor="@color/mainColor"
                        android:textAlignment="textStart"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="13dp"
                        app:layout_constraintTop_toBottomOf="@id/tx_tournament_title"
                        app:layout_constraintStart_toStartOf="@id/img_tournament"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/view_chat"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_about_teen"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@id/view_my_teen"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_about_teen">

                    <ImageView
                        android:id="@+id/img_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chat"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tx_chat_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_teen_chat_title"
                        android:textColor="@color/mainColor"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/img_chat"
                        app:layout_constraintBottom_toBottomOf="@id/img_chat"
                        app:layout_constraintStart_toEndOf="@id/img_chat"/>

                    <TextView
                        android:id="@+id/tx_chat_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_teen_chat_detail"
                        android:textColor="@color/mainColor"
                        android:textAlignment="textStart"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="13dp"
                        app:layout_constraintStart_toStartOf="@id/img_chat"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tx_chat_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/view_my_teen"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_about_teen"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/view_tournament"
                    app:layout_constraintStart_toEndOf="@id/view_chat"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/img_my_teen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_my_teen"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tx_my_teen_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_teen_my_teen_title"
                        android:textColor="@color/mainColor"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/img_my_teen"
                        app:layout_constraintBottom_toBottomOf="@id/img_my_teen"
                        app:layout_constraintStart_toEndOf="@id/img_my_teen"/>

                    <TextView
                        android:id="@+id/tx_my_teen_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_teen_my_teen_detail"
                        android:textColor="@color/mainColor"
                        android:textAlignment="textStart"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="13dp"
                        app:layout_constraintTop_toBottomOf="@id/tx_my_teen_title"
                        app:layout_constraintStart_toStartOf="@id/img_my_teen"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view_center_line_2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/whiteGrey"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@id/layout_about_teen"/>

            <TextView
                android:id="@+id/tx_tournament_in_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_tournament_in_progress"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_center_line_2"/>

            <TextView
                android:id="@+id/tx_tournament_in_progress_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tournament_in_progress_more"
                android:textColor="@color/darkGrey"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/view_center_line_2"
                app:layout_constraintEnd_toEndOf="parent"/>

            <HorizontalScrollView
                android:id="@+id/ns_tournament"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/tx_tournament_in_progress">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_tournament_exercise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bg_tournament_exercise"/>

                    <ImageView
                        android:id="@+id/img_tournament_study"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bg_tournament_study"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toEndOf="@id/img_tournament_exercise"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <View
                android:id="@+id/view_center_line_3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/whiteGrey"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@id/ns_tournament"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>