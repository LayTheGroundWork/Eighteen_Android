<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/badge_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/teen_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="16dp">

        <ImageView
            android:id="@+id/badge_card"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:src="@drawable/shape_profile_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="배지"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/badge_card"
            app:layout_constraintTop_toTopOf="@+id/badge_card" />

        <TextView
            android:id="@+id/tv_badge_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:text="10개"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/badge_card"
            app:layout_constraintTop_toBottomOf="@+id/tv_badge" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/teen_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/badge_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/iv_teen_card"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:src="@drawable/shape_profile_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_teen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="TEEN"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/iv_teen_card"
            app:layout_constraintTop_toTopOf="@+id/iv_teen_card" />

        <TextView
            android:id="@+id/tv_teen_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:text="5월 2주차 우승"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/iv_teen_card"
            app:layout_constraintTop_toBottomOf="@+id/tv_teen" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>